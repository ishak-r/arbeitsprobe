<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="cron_check_expired_licenses" model="ir.cron">
            <field name="name">License: Check Expired Licenses</field>
            <field name="model_id" ref="model_software_license"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expired_licenses()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0) + relativedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
        </record>

        <record id="cron_send_expiration_reminders" model="ir.cron">
            <field name="name">License: Send Expiration Reminders</field>
            <field name="model_id" ref="model_software_license"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_expiration_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0) + relativedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
