<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- License Management Categories -->
        <record id="module_category_license_management" model="res.groups.privilege">
            <field name="name">License Management</field>
            <field name="description">Manage software licenses</field>
            <field name="sequence">10</field>
        </record>

        <!-- User Group -->
        <record id="group_license_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="module_category_license_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group -->
        <record id="group_license_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="privilege_id" ref="module_category_license_management"/>
            <field name="implied_ids" eval="[(4, ref('group_license_user'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
