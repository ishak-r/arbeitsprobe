<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Template Form View Extension -->
        <record id="view_product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit.license</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- Add License button to button box -->
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_licenses" type="object" class="oe_stat_button" icon="fa-key" invisible="not is_license">
                        <field name="license_count" widget="statinfo" string="Licenses"/>
                    </button>
                </xpath>
                
                <!-- Add Is License field in General Information -->
                <xpath expr="//div[@name='options']" position="inside">
                    <span name="license_option" class="d-inline-flex">
                        <field name="is_license"/>
                        <label for="is_license"/>
                    </span>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
