<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_license_list" model="ir.ui.view">
            <field name="name">software.license.list</field>
            <field name="model">software.license</field>
            <field name="arch" type="xml">
                <list string="Licenses" decoration-danger="state == 'expired'" decoration-warning="is_expiring_soon" decoration-success="state == 'active'">
                    <field name="name"/>
                    <field name="license_key"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="start_date"/>
                    <field name="expiration_date"/>
                    <field name="days_until_expiration"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-danger="state == 'expired'" decoration-warning="state == 'suspended'"/>
                    <field name="is_expiring_soon" column_invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_license_form" model="ir.ui.view">
            <field name="name">software.license.form</field>
            <field name="model">software.license</field>
            <field name="arch" type="xml">
                <form string="License">
                    <header>
                        <button name="action_draft" string="Set to Draft" type="object" invisible="state in ['draft', 'canceled']" class="btn-secondary" groups="license_management.group_license_manager"/>
                        <button name="action_activate" string="Activate" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                        <button name="action_suspend" string="Suspend" type="object" invisible="state not in ['active']" class="btn-warning"/>
                        <button name="action_renew" string="Renew" type="object" invisible="state != 'active'" class="btn-primary"/>
                        <button name="action_cancel" string="Cancel" type="object" invisible="state in ['canceled', 'draft']" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="License Information">
                                <field name="license_key" readonly="1"/>
                                <field name="product_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                                <field name="partner_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                                <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                            </group>
                            <group string="Validity Period">
                                <field name="start_date" readonly="state != 'draft'"/>
                                <field name="duration_months" readonly="state != 'draft'"/>
                                <field name="expiration_date" readonly="1"/>
                                <field name="days_until_expiration" readonly="1"/>
                                <field name="is_expiring_soon" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Additional notes about this license..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_software_license_search" model="ir.ui.view">
            <field name="name">software.license.search</field>
            <field name="model">software.license</field>
            <field name="arch" type="xml">
                <search string="Search Licenses">
                    <field name="name"/>
                    <field name="license_key"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                    <filter string="Suspended" name="suspended" domain="[('state', '=', 'suspended')]"/>
                    <separator/>
                    <filter string="Expiring Soon" name="expiring_soon" domain="[('is_expiring_soon', '=', True)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group>
                        <filter string="Customer" name="partnerid" context="{'group_by': 'partner_id'}"/>
                        <filter string="Product" name="productid" context="{'group_by': 'product_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Expiration Date" name="group_expiration" context="{'group_by': 'expiration_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_software_license_management" model="ir.actions.act_window">
            <field name="name">Licenses</field>
            <field name="res_model">software.license</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_software_license_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first license
                </p>
                <p>
                    Click the create button to add a new software license for a customer.
                </p>
            </field>
        </record>

    </data>
</odoo>
